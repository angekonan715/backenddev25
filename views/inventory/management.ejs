<h1>Vehicle Management</h1>

<% if (locals.message) { %>
    <div
        class="notice <%= locals.message.includes('required') || locals.message.includes('cannot contain') || locals.message.includes('failed') ? 'error' : '' %>">
        <p>
            <%= message %>
        </p>
    </div>
    <% } %>

        <div class="management-section">
            <a href="/inv/add-classification" class="management-link">Add New Classification</a>
            <a href="/inv/add-inventory" class="management-link">Add New Vehicle</a>
        </div>

        <h2>Manage Inventory</h2>
        <p>Choose a classification to see those inventory items.</p>

        <%- classificationSelect %>

            <table id="inventoryDisplay"></table>

            <noscript>JavaScript must be enabled to use this page.</noscript>

            <script src="../../js/inventory.js"></script>