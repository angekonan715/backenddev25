<h1>Delete Inventory Item</h1>

<% if (locals.message) { %>
    <div class="notice">
        <p>
            <%= message %>
        </p>
    </div>
    <% } %>

        <% if (locals.errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <p>Confirm Deletion - The delete is permanent.</p>

                <form id="deleteForm" action="/inv/delete" method="post">
                    <fieldset>
                        <legend>Vehicle Information</legend>

                        <div class="form-group">
                            <label for="inv_make">Make:</label>
                            <input type="text" name="inv_make" id="inv_make" readonly
                                value="<%= locals.inv_make || '' %>">
                        </div>

                        <div class="form-group">
                            <label for="inv_model">Model:</label>
                            <input type="text" name="inv_model" id="inv_model" readonly
                                value="<%= locals.inv_model || '' %>">
                        </div>

                        <div class="form-group">
                            <label for="inv_year">Year:</label>
                            <input type="number" name="inv_year" id="inv_year" readonly
                                value="<%= locals.inv_year || '' %>">
                        </div>

                        <div class="form-group">
                            <label for="inv_price">Price:</label>
                            <input type="number" name="inv_price" id="inv_price" readonly
                                value="<%= locals.inv_price || '' %>">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">Delete Vehicle</button>
                            <a href="/inv/" class="btn btn-secondary">Cancel</a>
                        </div>

                        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                            <% } %>>
                    </fieldset>
                </form>