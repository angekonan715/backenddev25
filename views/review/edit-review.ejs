<h1>Edit Review</h1>

<% if (locals.message) { %>
    <div class="notice">
        <p>
            <%= message %>
        </p>
    </div>
    <% } %>

        <% if (locals.errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <div class="review-info">
                    <h2>Review for: <%= inv_year %>
                            <%= inv_make %>
                                <%= inv_model %>
                    </h2>
                </div>

                <form id="editReviewForm" action="/review/update" method="post">
                    <fieldset>
                        <legend>Edit Review</legend>

                        <div class="form-group">
                            <label for="review_text">Review Text:</label>
                            <textarea name="review_text" id="review_text" required rows="6"
                                minlength="10"><%= locals.review_text || '' %></textarea>
                            <small>Review must be at least 10 characters long.</small>
                        </div>

                        <input type="hidden" name="review_id" value="<%= review_id %>">
                        <input type="hidden" name="inv_id" value="<%= inv_id %>">

                        <div class="form-group">
                            <input type="submit" value="Update Review" class="btn btn-primary">
                            <a href="/account/" class="btn btn-secondary">Cancel</a>
                        </div>
                    </fieldset>
                </form>

                <script src="../../js/review-validation.js"></script>